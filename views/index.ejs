<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <%- include('partials/header', {title, tasks}) %>

      <main>
        <% if (error) { %>
        <div class="error">
          <p><%= error %></p>
        </div>
        <% } %>

        <div class="tasks-section">
          <h2>Tareas (<%= tasks.length %>)</h2>

          <% if (tasks.length === 0) { %>
          <p class="no-tasks">No hay tareas registradas.</p>
          <% } else { %>
          <ul class="tasks-list">
            <% tasks.forEach(function(task) { %>
            <li class="task-item">
              <span class="task-text"><%= task.item %></span>
              <div class="task-actions">
                <!-- Form para borrar -->
                <form
                  action="/tasks/<%= task.id %>/delete"
                  method="POST"
                  class="delete-form"
                >
                  <button type="submit" class="delete-btn">ğŸ—‘ï¸ Borrar</button>
                </form>
              </div>
            </li>
            <% }); %>
          </ul>
          <% } %>
        </div>

        <!-- SECCIÃ“N PARA AGREGAR NUEVAS TAREAS -->
        <div class="add-section">
          <button id="toggle-form-btn" class="add-btn">â• Agregar Tarea</button>

          <form id="add-task-form" action="/tasks" method="POST" class="hidden">
            <div class="form-group">
              <input
                type="text"
                name="task"
                placeholder="Escribe tu nueva tarea..."
                required
                class="task-input"
              />
            </div>
            <div class="form-actions">
              <button type="submit" class="submit-btn">âœ… Agregar</button>
              <button type="button" id="cancel-btn" class="cancel-btn">
                âŒ Cancelar
              </button>
            </div>
          </form>
        </div>
      </main>

      <%- include('partials/footer', {tasks}) %>
    </div>

    <script type="module" src="/js/app.js"></script>
  </body>
</html>
